<?xml version="1.0" encoding="utf-8"?>

<TabHost 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<TabWidget
			android:id="@android:id/tabs"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView
				android:tag="tab0"
				android:text="HOROSCOPO"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				/>
			<TextView
				android:tag="tab1"
				android:text="EDAD"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				/>
			<TextView
				android:tag="tab2"
				android:text="BIORITMO"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				/>
		
		</TabWidget>
			
		<FrameLayout
			android:id="@android:id/tabcontent"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			
			<RelativeLayout
            	android:id="@+id/horoscopo_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                    
                	<TextView 
                        android:id="@+id/sabemos_tu_horoscopo"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="54dp"
				        android:textSize="15sp"
				        android:text="La bola de cristal dijo que tu horoscopo es:"
                        />
                    
                    <TextView 
                        android:id="@+id/horoscopo"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_below="@+id/sabemos_tu_horoscopo"
				        android:layout_marginTop="15dp"
				        android:textSize="15sp"
				        android:text="Acuario"
                        />

                    <TextView
                        android:id="@+id/pronostico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/horoscopo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:ems="10" 
                    />
                    
                </RelativeLayout>
                
			<RelativeLayout
                    android:id="@+id/edad_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    
                    <TextView 
                        android:id="@+id/sabemos_tu_edad"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="54dp"
				        android:textSize="15sp"
				        android:text="La magia blanca nos revela tu edad:"
                        />
                    
                    <TextView 
                        android:id="@+id/edad"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@+id/sabemos_tu_edad"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="30dp"
				        android:textSize="15sp"
				        android:text="19"
                        />
                    
            </RelativeLayout>
            
			<RelativeLayout
                    android:id="@+id/bioritmo_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    
                    <TextView 
                        android:id="@+id/sabemos_tu_bioritmo"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="54dp"
				        android:textSize="25sp"
				        android:text="Y tu conoces tu bioritmo?:"
                        />
                    
                    <TextView 
                        android:id="@+id/ciclo_fisico"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@+id/sabemos_tu_bioritmo"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="30dp"
				        android:textSize="15sp"
				        android:text="Ciclo fisico:"
                        />
                    <TextView 
                        android:id="@+id/ciclo_fisico_valor"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@+id/ciclo_fisico"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="5dp"
				        android:textSize="15sp"
				        android:text="22.5"
                        />
                    
                    <TextView 
                        android:id="@+id/ciclo_emocional"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@+id/ciclo_fisico_valor"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="30dp"
				        android:textSize="15sp"
				        android:text="Ciclo emocional:"
                        />
                    <TextView 
                        android:id="@+id/ciclo_emocional_valor"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@+id/ciclo_emocional"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="5dp"
				        android:textSize="15sp"
				        android:text="22.5"
                        />
                    
                    <TextView 
                        android:id="@+id/ciclo_intelectual"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@+id/ciclo_emocional_valor"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="30dp"
				        android:textSize="15sp"
				        android:text="Ciclo intelectual:"
                        />
                    <TextView 
                        android:id="@+id/ciclo_intelectual_valor"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@+id/ciclo_intelectual"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="5dp"
				        android:textSize="15sp"
				        android:text="22.5"
                        />
                    
            </RelativeLayout>
		</FrameLayout>
	</LinearLayout>
</TabHost>